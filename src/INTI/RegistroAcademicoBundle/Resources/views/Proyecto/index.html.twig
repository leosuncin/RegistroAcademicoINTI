{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block style %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('assets/watable/watable.css') }}">

{% endblock %}

{% block content %}
    <h1>Lista de proyectos</h1>

    <table id="tabla" class="table table-hover">
        <thead>
            <tr>
                
                <th>Nombre</th>
                <th>Descripcion</th>
               
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    
                        <a class="btn btn-info" href="{{ path('proyecto_show', { 'id': entity.id }) }}">{{ '.icon-eye-open Consultar'|parse_icons('white') }}</a>
                    
                        <a class="btn btn-info" href="{{ path('proyecto_edit', { 'id': entity.id }) }}">{{ '.icon-edit Modificar'|parse_icons('white') }}</a>
                   
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

      <a class="btn btn-primary" href="{{ path('proyecto_new') }}">
                {{ '.icon-plus-sign Ingresar nuevo proyecto'|parse_icons('white') }}
            </a>
      
    {% endblock %}
    
{% block javascript %}
{{ parent() }}
<script src="{{ asset('assets/watable/jquery.watable.js') }}"></script>
{% endblock %}