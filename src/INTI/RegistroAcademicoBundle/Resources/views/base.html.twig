{% macro script(js) %}
	{% if js.form|default(false) %}
		<script src="{{ asset('assets/jquery-validation/dist/jquery.validate.js') }}"></script>
		<script src="{{ asset('assets/jquery-validation/localization/messages_es.js') }}"></script>
		<script src="{{ asset('assets/jquery-mask/jquery.mask.js') }}"></script>
		<script src="{{ asset('bundles/registroacademico/js/validacion-formularios.js') }}"></script>
		<script src="{{ asset('bundles/registroacademico/js/enmascarar-formularios.js') }}"></script>
	{% endif %}
	{% if js.foto|default(false) %}
		<script src="{{ asset('bundles/registroacademico/js/fotografia_base64.js') }}"></script>
	{% endif %}
	{% if js.calendar|default(false) %}
		<script src="{{ asset('assets/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
		<script src="{{ asset('assets/bootstrap-datepicker/js/locales/bootstrap-datepicker.es.js') }}"></script>
	{% endif %}
	{% if js.watable|default(false) %}
		<script src="{{ asset('assets/watable/jquery.watable.js') }}"></script>
	{% endif %}
	{% if js.select2|default(false) %}
		<script src="{{ asset('assets/select2/select2.js') }}"></script>
		<script src="{{ asset('assets/select2/select2_locale_es.js') }}"></script>
	{% endif %}
	{% if js.dropzone|default(false) %}
		<script src="{{ asset('assets/dropzone/lib/dropzone.js') }}"></script>
	{% endif %}
	{% if js.offline|default(false) %}
		<script src="{{ asset('assets/offline/offline.min.js') }}"></script>
	{% endif %}
	{% if js.twig|default(false) %}
		<script src="{{ asset('assets/twig.js/twig.min.js') }}"></script>
		<script src="{{ asset('bundles/registroacademico/js/plantillas.js') }}"></script>
	{% endif %}
	{% if js.buscarAjax|default(false) %}
		<script src="{{ asset('bundles/registroacademico/js/buscarAjax.js') }}"></script>
	{% endif %}
{% endmacro %}

{% macro css(sheet) %}
	{% if sheet.calendar|default(false) %}
<link rel="stylesheet" href="{{ asset('assets/bootstrap-datepicker/css/datepicker.css') }}" />
	{% endif %}
	{% if sheet.watable|default(false) %}
<link rel="stylesheet" type="text/css" href="{{ asset('assets/watable/watable.css') }}" />
	{% endif %}
	{% if sheet.select2|default(false) %}
<link rel="stylesheet" href="{{ asset('assets/select2/select2.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/registroacademico/css/select2-bootstrap.css') }}">
	{% endif %}
	{% if sheet.offline|default(false) %}
<link rel="stylesheet" href="{{ asset('assets/offline/themes/offline-theme-dark.css') }}">
<link rel="stylesheet" href="{{ asset('assets/offline/themes/offline-theme-dark-indicator.css') }}">
	{% endif %}
{% endmacro %}

{% macro dialog(param) %}
<div class="modal hide fade" id="dialog{{ param.accion }}" tabindex="-1" role="dialog" aria-labelledby="titulo" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 id="titulo">{{ param.titulo }}</h3>
	</div>
	<div class="modal-body">
		<p><strong style="color: red">Cuidado</strong> {{ param.mensaje }}</p>
	</div>
	<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
		<button id="confirm{{ param.accion }}" class="btn btn-primary">Confirmar</button>
	</div>
</div>
{% endmacro %}