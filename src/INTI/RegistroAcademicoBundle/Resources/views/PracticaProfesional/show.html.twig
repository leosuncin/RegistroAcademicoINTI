{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block content %}
    <h1>Practica Profesional</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Horario</th>
                <td>{{ entity.horario }}</td>
            </tr>
            <tr>
                <th>Inicio</th>
                <td>{{ entity.inicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.fin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Evaluacion</th>
                <td>{{ entity.evaluacion }}</td>
            </tr>
        </tbody>
    </table>

       <div class="form-actions">
<form action="{{ path('practicaprofesional_delete', { 'id': entity.codigo }) }}" method="post" class="form-acctions">
<table>
  <tr>
    <td><a href="{{ path('practicaprofesional_edit', { 'id': entity.codigo }) }}" class="btn btn-primary">Editar</a></td>
    
     <td> <a href="{{ path('practicaprofesional') }}" class="btn btn-info">Regresar a la lista</a></td>
 
    <input type="hidden" name="_method" value="DELETE" /> 
    {{ form_widget(delete_form) }}
    <td> <button type="submit"  class="btn btn-danger">Borrar</button></td> 
    </tr>
    </table>
</form>
</div>

{% for flashMessage in app.session.flashbag.get('notice') %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ flashMessage }}
</div>
{% endfor %}
{% endblock %}