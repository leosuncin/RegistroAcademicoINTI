{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block content -%}
    <h1>Modificar codigo de especialidad</h1>
        <form action="{{ path('codigoespecialidad_update', { 'id': entity.codigo }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
     
        {{ form_widget(edit_form) }}
        
            <table>
            <tr>
   <td>    <button type="submit" class="btn btn-primary">Editar</button>
      
    </form></td>

       
       <td> <a class="btn btn-info" href="{{ path('codigoespecialidad_index') }}">
            Regresar a la lista
        </a>
   </td>
   
       <form action="{{ path('codigoespecialidad_delete', { 'id': entity.codigo }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
          <td>   <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
    </td>
    </tr>
</table>
{% for flashMessage in app.session.flashbag.get('notice') %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ flashMessage }}
</div>
{% endfor %}
{% endblock %}
