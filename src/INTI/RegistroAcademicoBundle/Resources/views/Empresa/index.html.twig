{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block content %}
<table class="records_list">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  {% for entity in entities %}
    <tr>
      <td><a href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
      <td>{{ entity.nombre }}</td>
      <td>{{ entity.contacto }}</td>
      <td>{{ entity.telefono }}</td>
      <td>{{ entity.direccion }}</td>
      <td>{{ entity.email }}</td>
      <td>
      <ul>
          <li>
              <a class="btn btn-small" href="{{ path('empresa_show', { 'id': entity.id }) }}">Mostrar</a>
          </li>
          <li>
              <a class="btn btn-small" href="{{ path('empresa_edit', { 'id': entity.id }) }}">Editar</a>
          </li>
      </ul>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

