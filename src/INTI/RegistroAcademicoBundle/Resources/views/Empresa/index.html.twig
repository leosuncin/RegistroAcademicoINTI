{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}
{% block breadcrumb %}
<li><span class="divider">&gt;</span> <a href="{{ path('index') }}">Inicio</a></li>

<li class="active"><span class="divider">&gt;</span> Empresas</li>
{% endblock %}
{% block content %}
<table id="tabla" class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  {% for entity in entities %}
    <tr>
      <td><a href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
      <td>{{ entity.nombre }}</td>
      <td>{{ entity.contacto }}</td>
      <td>{{ entity.telefono }}</td>
      <td>{{ entity.direccion }}</td>
      <td>{{ entity.email }}</td>
      <td>
      <ul>
        
              <a class="btn btn-small btn-info" href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ '.icon-eye-open Consultar'|parse_icons('white') }}</a>
          
              <a class="btn btn-small btn-info" href="{{ path('empresa_edit', { 'id': entity.id }) }}">{{ '.icon-edit Modificar'|parse_icons('white') }}</a>
          
      </ul>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

   <a class="btn btn-primary" href="{{ path('empresa_new') }}">
                {{ '.icon-plus-sign Ingresar una nueva empresa'|parse_icons('white') }}
            </a>

                       {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ flashMessage }}
                        </div>
                        {% endfor %}
                        {% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('assets/watable/jquery.watable.js') }}"></script>
{% endblock %}
