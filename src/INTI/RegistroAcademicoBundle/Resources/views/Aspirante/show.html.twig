{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block content %}
<h1>Aspirante</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Foto</th>
            <td><img src="data:image/jpg;base64,{{ entity.foto }}" alt="Fotografia" /></td>
        </tr>
        <tr>
            <th>Nombre completo</th>
            <td>{{ entity.primerapellido~' '~entity.segundoapellido~', '~entity.nombres }}</td>
        </tr>
        <tr>
            <th>Especialidad</th>
            <td>{{ entity.especialidad.nombre }}</td>
        </tr>
        <tr>
            <th>Direccion</th>
            <td>{{ entity.direccion }}</td>
        </tr>
        <tr>
            <th>Telefono</th>
            <td>{{ entity.telefono }}</td>
        </tr>
        <tr>
            <th>Fechanac</th>
            <td>{{ entity.fechanac|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Lugarnac</th>
            <td>{{ entity.lugarnac }}</td>
        </tr>
        <tr>
            <th>Sexo</th>
            <td>{{ entity.sexo }}</td>
        </tr>
        <tr>
            <th>Encargado</th>
            <td>{{ entity.encargado.nombre }}</td>
        </tr>
    </tbody>
</table>
<form action="{{ path('expediente_aspirante_delete', { 'id': entity.id }) }}" method="post" class="form-acctions">
    <a href="{{ path('expediente_aspirante') }}" class="btn">Back to the list</a>
    <a href="{{ path('expediente_aspirante_edit', { 'id': entity.id }) }}" class="btn">Edit</a>
    <input type="hidden" name="_method" value="DELETE" />
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-warning">Delete</button>
</form>
{% endblock %}
