{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block style %}
{{ load.css({ watable: true }) }}
{% endblock %}

{% block breadcrumb %}
<li><span class="divider">&gt;</span><a href="{{ path('index') }}">Inicio</a></li>
<li><span class="divider">&gt;</span><a href="{{ path('aspirante_index') }}">Aspirantes</a></li>
<li class="active"><span class="divider">&gt;</span> Consultar</li>
{% endblock %}

{% block content %}
<table id="tabla" class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Sexo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for aspirante in aspirantes %}
        <tr>
            <td>{{ aspirante.primerapellido~' '~aspirante.segundoapellido~', '~aspirante.nombres }}</td>
            <td>{{ aspirante.especialidad.nombre }}</td>
            <td>{% if aspirante.sexo == 'M' %}
                        Masculino
                    {% else %}
                        Femenino
                    {% endif %}</td>
            <td>
                <div class="btn-group btn-group-vertical">
                    <a class="btn btn-info btn-mini" href="{{ path('aspirante_show', { 'nie': aspirante.nie }) }}">{{ '.icon-eye-open Consultar'|parse_icons('white') }}</a>
                    <a class="btn btn-info btn-mini" href="{{ path('aspirante_edit', { 'nie': aspirante.nie }) }}">{{ '.icon-edit Modificar'|parse_icons('white') }}</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<a class="btn btn-primary" href="{{ path('aspirante_new') }}">{{ '.icon-plus-sign Ingresar un nuevo aspirante'|parse_icons('white') }}</a>
{% endblock %}

{% block javascript %}
{{ load.script({ form: false, watable: true }) }}
{% endblock %}