{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block style %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('assets/watable/watable.css') }}">
{% endblock %}

{% block content %}
    <h1>Aspirante list</h1>

    <table id="tabla" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Especialidad</th>
                <th>Telefono</th>
                <th>Sexo</th>
                <th>Encargado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('expediente_aspirante_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.primerapellido~' '~entity.segundoapellido~', '~entity.nombres }}</td>
                <td>{{ entity.especialidad.nombre }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.sexo }}</td>
                <td>{{ entity.encargado.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('expediente_aspirante_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('expediente_aspirante_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('expediente_aspirante_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('assets/watable/jquery.watable.js') }}"></script>
{% endblock %}