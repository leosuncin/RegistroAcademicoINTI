{% if app.request.isXmlHttpRequest and aspirantes|length <= 0 %}
<tr class="error"><td>No hay aspirantes que concuerden con la b√∫squeda</td></tr>
{% endif %}
{% for aspirante in aspirantes %}
<tr>
    <td>{{ aspirante.primerapellido~' '~aspirante.segundoapellido~', '~aspirante.nombres }}</td>
    <td>{{ aspirante.especialidad.nombre }}</td>
    <td>{% if aspirante.sexo == 'M' %}Masculino{% else %}Femenino{% endif %}</td>
    <td>
        <div class="btn-group btn-group-vertical">
            <a class="btn btn-info btn-mini" href="{{ path('aspirante_show', { 'nie': aspirante.nie }) }}">{{ '.icon-eye-open Consultar'|parse_icons('white') }}</a>
            <a class="btn btn-info btn-mini" href="{{ path('aspirante_edit', { 'nie': aspirante.nie }) }}">{{ '.icon-edit Modificar'|parse_icons('white') }}</a>
            <a href="{{ path('alumno_inscribir', {'aspirante': aspirante.nie }) }}" class="btn btn-info btn-mini">{{ '.icon-ok-sign Matricular'|parse_icons('white') }}</a>
        </div>
    </td>
</tr>
{% endfor %}