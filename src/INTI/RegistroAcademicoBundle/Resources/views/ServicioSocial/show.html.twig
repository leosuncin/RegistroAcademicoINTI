{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}
{% block breadcrumb %}
<li><span class="divider">&gt;</span> <a href="{{ path('index') }}">Inicio</a></li>
<li><span class="divider">&gt;</span> <a href="{{ path('serviciosocial') }}">Servicio social</a></li>
<li class="active"><span class="divider">&gt;</span> Mostrar</li>
{% endblock %}

{% block content %}
    <h1>ServicioSocial</h1>

    <table class="record_properties">
        <tbody>
          
            <tr>
                <th>Horas realizadas</th>
                <td>{{ entity.horasRealizadas }}</td>
            </tr>
              <tr>
                <th>Alumno (NIE)</th>
                <td>{{ entity.alumno.nie }}</td>
            </tr>

            
        </tbody>
    </table>

        
    <div class="form-actions">
<form action="{{ path('serviciosocial_delete', { 'id': entity.id }) }}" method="post" class="form-acctions">
<table>
  <tr>
    <td><a href="{{ path('serviciosocial_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a></td>
    
     <td> <a href="{{ path('serviciosocial') }}" class="btn btn-info">Regresar a la lista</a></td>
 
    <input type="hidden" name="_method" value="DELETE" /> 
    {{ form(delete_form) }}
    <td> <button type="submit"  class="btn btn-danger">Borrar</button></td> 
    </tr>
    </table>
</form>
</div>

{% for flashMessage in app.session.flashbag.get('notice') %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ flashMessage }}
</div>
{% endfor %}
{% endblock %}
