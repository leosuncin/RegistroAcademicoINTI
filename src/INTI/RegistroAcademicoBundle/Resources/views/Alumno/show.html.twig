{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block breadcrumb %}
<li><span class="divider">&gt;</span><a href="{{ path('index') }}">Inicio</a></li>
<li><span class="divider">&gt;</span><a href="{{ path('alumno_index') }}">Alumnos</a></li>
<li class="active"><span class="divider">&gt;</span> Consultar</li>
{% endblock %}

{% block content %}
{% for flashMessage in app.session.flashbag.get('confirm') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
<ul class="nav nav-tabs">
    <li class="active"><a href="#tabInformacion" data-toggle="tab">Información básica</a></li>
    <li><a href="#tabEncargado" data-toggle="tab">Encargado</a></li>
</ul>
<ul id="tabContent" class="tab-content">
    <li id="tabInformacion" class="tab-pane fade in active">
        <table class="record_properties table">
            <tbody>
                <tr>
                    <th>Foto</th>
                    <td><img src="data:image/jpg;base64,{{ entity.nie.foto|default('') }}" alt="Fotografia" class="profile_id img-polaroid" /></td>
                </tr>
				<tr>
                    <th>NIE</th>
                    <td>{{ entity.nie.nie }}</td>
                </tr>
                <tr>
                    <th>Nombre completo</th>
                    <td>{{ entity.nie.primerapellido~' '~entity.nie.segundoapellido~', '~entity.nie.nombres }}</td>
                </tr>
                <tr>
                    <th>Especialidad</th>
                    <td>{{ entity.codigoespecialidad.especialidad.nombre }}</td>
                </tr>
				<tr>
                    <th>Codigo de Especialidad</th>
                    <td>{{ entity.codigoespecialidad.codigo }}</td>
                </tr>
                <tr>
                    <th>Direccion</th>
                    <td>{{ entity.nie.direccion }}</td>
                </tr>
                <tr>
                    <th>Telefono</th>
                    <td>{{ entity.nie.telefono }}</td>
                </tr>
                <tr>
                    <th>Fechanac</th>
                    <td>{{ entity.nie.fechanac|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Lugarnac</th>
                    <td>{{ entity.nie.lugarnac }}</td>
                </tr>
                <tr id='sex'>
                    <th>Sexo</th>
                    <td>{{ entity.nie.sexo }}</td>
                </tr>
				<tr id='cond'>
                    <th>Condicion</th>
                    <td>{{ entity.condicion }}</td>
                </tr>
				<tr>
                    <th>Nombre de Usuario en el Sistema</th>
                    <td>{{ entity.usuario.username }}</td>
                </tr>
            </tbody>
        </table>
        <div class="form-actions">
          <a href="{{ path('alumno_edit', { 'nie': entity.nie.nie}) }}" class="btn btn-info">Modificar</a>
          <a href="{{ path('alumno_erase', { 'nie': entity.nie.nie }) }}" class="btn btn-danger">Eliminar</a>
          <a href="{{ path('alumno_index') }}" class="btn">Regresar</a>
        </div>
    </li>
    <li id="tabEncargado" class="tab-pane fade">
        <table class="record_properties table">
            <tr>
                <th>Nombre completo</th>
                <td>{{ entity.nie.encargado.nombre }}</td>
            </tr>
            <tr>
                <th>Parentesco</th>
                <td>{{ entity.nie.encargado.parentesco }}</td>
            </tr>
            <tr>
                <th>DUI</th>
                <td>{{ entity.nie.encargado.dui }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ entity.nie.encargado.telefono }}</td>
            </tr>
        </table>
    </li>
</ul>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script>
	$(document).ready(function(){
		switch($("#sex td").html().toLowerCase()){
			case 'm':
				$("#sex td").html('Masculino')
			break;
			case 'f':
				$("#sex td").html('Femenino')
			break;
		}
		switch($("#cond td").html().toLowerCase()){
			case 'cc':
				$("#cond td").html('Condicionado Conducta');
			break;
			case 'cm':
				$("#cond td").html('Condicionado Materia');
			break;
			case 'ni':
				$("#cond td").html('Nuevo Ingreso');
			break;
			case 'r':
				$("#cond td").html('Repetidor');
			break;
			case 'ri':
				$("#cond td").html('Reingreso');
			break;
			
		}
	});
</script>
{% endblock %}
