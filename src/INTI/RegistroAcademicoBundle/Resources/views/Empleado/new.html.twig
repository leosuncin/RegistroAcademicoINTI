{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block breadcrumb %}
<li><span class="divider">&gt;</span> <a href="{{ path('index') }}">Inicio</a></li>
<li><span class="divider">&gt;</span> <a href="{{ path('empleado_index') }} ">Empleados</a></li>
<li class="active"><span class="divider">&gt;</span> Crear</li>
{% endblock %}

{% block content %}
    <form action="{{ path('empleado_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		{#
        {{ form_label(form.fotografia) }}
        <input type="file" id="filePicker" class="btn"/>
		#}
        {{ form_widget(form, {'form_type': 'horizontal'}) }}
        {{ form_row(form.usuario) }}
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Crear" />
            <a href="{{ path('empleado_index') }}" class="btn">Regresar</a>
        </div>
        {# <div id="password-popover" class="popover top" data-animation="true">
            <div class="arrow"></div>
            <h3 class="popover-title">Contraseña segura</h3>
            <ul class="popover-content">
                <li><i id="length" class="icon-ok-sign"></i> La contraseña del usuario por lo menos debe tener 8 caracteres de largo</li>
                <li><i id="lowerCase" class="icon-ok-sign"></i> La contraseña de usuario debe contener por lo menos una letra en minúscula</li>
                <li><i id="upperCase" class="icon-ok-sign"></i> La contraseña de usuario debe contener por lo menos una letra en mayúscula</li>
                <li><i id="number" class="icon-ok-sign"></i> La contraseña de usuario debe contener por lo menos un numero</li>
            </ul>
        </div> #}
        <div class="control-group error">
          {{ form_errors(form) }}
        </div>
    </form>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('assets/jquery-validation/dist/jquery.validate.js') }}"></script>
<script src="{{ asset('assets/jquery-validation/localization/messages_es.js') }}"></script>
<script src="{{ asset('assets/jquery-mask/jquery.mask.js') }}"></script>
<script src="{{ asset('bundles/registroacademico/js/fotografia_base64.js') }}"></script>
<script src="{{ asset('bundles/registroacademico/js/validacion-formularios.js') }}"></script>
<script>
    $('#empleadotype_dui').mask("99999999-9");
    $('#empleadotype_isss').mask("999999999");
    $('#empleadotype_nit').mask("9999-999999-999-9");
    $('#empleadotype_nup').mask("999999999999");
</script>
{% endblock %}
