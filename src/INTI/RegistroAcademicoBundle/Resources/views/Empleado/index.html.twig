{% extends 'RegistroAcademicoBundle:Default:layout.html.twig' %}

{% block content %}
    <h1>Empleado list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Puesto</th>
                <th>Fotografia</th>
                <th>Dui</th>
                <th>Isss</th>
                <th>Nit</th>
                <th>Nup</th>
                <th>Sexo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_empleado_show', { 'id': entity.id }) }}" class="btn">{{ entity.id }}</a></td>
                <td>{{ entity.nombres~' '~entity.apellidos }}</td>
                <td>{{ entity.puesto }}</td>
                <td><img src="data:image/jpg;base64,{{ entity.fotografia }}" alt="Fotografia" /></td>
                <td>{{ entity.dui }}</td>
                <td>{{ entity.isss }}</td>
                <td>{{ entity.nit }}</td>
                <td>{{ entity.nup }}</td>
                <td>{{ entity.sexo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_empleado_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_empleado_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_empleado_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

{% block aside %}
{{ knp_menu_render('RegistroAcademicoBundle:Builder:empleadosMenu') }}
{% endblock %}